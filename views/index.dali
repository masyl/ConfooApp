<body>
<div id="siteCtn">
<div id="mainCtn"  class="home">
    <div class="wrapper">
        <a href="./ipod" id="map" data-transition="fade"><img src="images/map.png"></a>
        <div id="tagLine"><img src="images/tagLine.png"></div>
        <div id="popcorn"><img src="images/popcorn.png"></div>
        <img id="completeForm" src="images/completeForm.png">
        <form action="" method="post" autocomplete="on" data-ajax="false" id="registrationForm">
            <div data-role="fieldcontain" class="input">
                <label for="name">Full Name</label>
                <input name="name" id="name" type="text" class="required">
            </div>
            <div data-role="fieldcontain" class="input">
                <label for="email">Email</label>
                <input name="email" id="email" type="text" class="required">
            </div>
            <div data-role="fieldcontain">
                <label for="profession" class="select">Profession</label>
                <select name="profession" id="profession" title="Profession" class="required">
                    <option value="" selected="selected">Profession</option>
                    <option value="backend">Front-End</option>
                    <option value="backend">Back-End</option>
                </select>
            </div>
            <button type="submit" data-theme="b" name="submit" value="submit-value" class="ui-btn-hidden" aria-disabled="false">Send</button>
        </form>
    </div>
</div>
</div>
</body>