<!doctype>
<html>
	<body>
		<h1>People profiles</h1>
		{{var "person", item.match(item.datasources.people.people, "id", item.id) /}}
		{{if vars.person }}
			<p>
				id: {{out vars.person.id /}}
				<br />
				Firstname: {{out vars.person.firstname /}}
				<br />
				Lastname: {{out vars.person.lastname /}}
			</p>
		{{endif}}
	</body>
</html>